<div class="row">
  <div class="col-md-5 col-md-offset-3 text-center">

    <h2>Modifier le profil</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/device_errors' %>

      <div class="form-group">
          <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom Complet" %>
        </div>

       <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Adresse e-mail" %>
        </div>
      <div class="row">
        <div class="col-md-4">
            <div class="form-group">
              <span class="btn btn-default btn-file">
               Upload ma photo
              <%= f.file_field :avatar %>
              </span>
            </div>
        </div>
      </div>
    
      <div class="form-group">
          <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>
        </div>
    
      <div class="form-group">
          <%= f.text_area :description, rows: 5, clo:25, class: "form-control", placeholder: "Ma description" %>
        </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Nouveau mot de passe (si vous souhaitez changer de mot de passe)" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmez le nouveau mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Votre ancien mot de passe (pour confirmer tous changements)" %>
      </div>

      <div class="actions">
        <%= f.submit "Enregistrer", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>Supprimer mon compte</h3>

    <p>Vous souhaitez supprimer toutes vos données ? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous sur?" }, method: :delete, class: "btn btn-primary" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
